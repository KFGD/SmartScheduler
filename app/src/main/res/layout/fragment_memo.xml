<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="cnu.mobilesoftware.smartscheduler.Fragment.MemoFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.stacktips.view.CustomCalendarView
            android:id="@+id/calendar_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:calendarBackgroundColor="@color/off_white"
            app:calendarTitleTextColor="@color/black"
            app:currentDayOfMonthColor="@color/blue"
            app:dayOfMonthTextColor="@color/black"
            app:dayOfWeekTextColor="@color/black"
            app:disabledDayBackgroundColor="@color/off_white"
            app:disabledDayTextColor="@color/gray"
            app:selectedDayBackgroundColor="@color/gray"
            app:titleLayoutBackgroundColor="@color/white"
            app:weekLayoutBackgroundColor="@color/white"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/main_memo"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:minWidth="250dp">
            <TextView
                android:id="@+id/memo_text"
                android:layout_marginBottom="150dp"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:textColor="#00008B"
                android:gravity="center_vertical"/>
            <ImageButton
                android:id="@+id/memo_btn"
                android:background="@null"
                android:src="@android:drawable/ic_menu_edit"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</FrameLayout>
