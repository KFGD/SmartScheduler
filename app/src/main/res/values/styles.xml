<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.SmartSchedulerTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#EC4074</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="colorPrimaryDark">#E91E63</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="dialogTheme">@style/AppTheme.Dialog</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog.Alert</item>
    </style>

    <!--Style: CardView-->
    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--Style: Dialog-->
    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog">

    </style>

    <!--Style: AlertDialog-->
    <style name="AppTheme.Dialog.Alert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#EC4074</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="Widget.TextInputLayout" parent="Widget.AppCompat.EditText">

    </style>

    <style name="Theme.MaterialDesign" parent="Theme.SmartSchedulerTheme">

    </style>
</resources>
