<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_edit_memo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00FFFFFF"
    tools:context=".KFGD_MemoUI.EditMemoDialog">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/dialog_memo"
        android:padding="10dp">
            <cnu.mobilesoftware.smartscheduler.KFGD_MemoUI.UILinedEditText
            android:id="@+id/edit"
            android:background="@null"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:maxLines="3"
            android:layout_marginRight="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
            <ImageButton
                android:id="@+id/btn_delete"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/dialog_delete"
                android:scaleType="centerCrop"
                android:background="#D2D4E1"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"/>
            <ImageButton
                android:id="@+id/btn_save"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:src="@drawable/dialog_ok"
                android:background="#D2D4E1"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"/>
    </RelativeLayout>
</RelativeLayout>
